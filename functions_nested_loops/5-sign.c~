#include "main.h"

/**
 *print_sign- print the sign of a number
 *
 *Return: always
 */

int print_sign(int n)

{
  if (n > 0
     _putchar(',')
     _putchar(' ')
     _putchar(n + 
     _putchar('\n')

  else if ( n == 0
     _putchar(',')
     _putchar(' ')
     _putchar(n +
     _putchar('\n')
  else ( n < 0
     _putchar(',')
     _putchar(' ')
     _putchar(n +
     _putchar('\n')

return 0
}
